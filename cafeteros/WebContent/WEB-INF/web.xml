<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <servlet>
    <servlet-name>raiz</servlet-name>
    <jsp-file>/WEB-INF/view/pages/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>raiz</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <jsp-file>/WEB-INF/view/pages/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>teams</servlet-name>
    <jsp-file>/WEB-INF/view/pages/teams.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>teams</servlet-name>
    <url-pattern>/teams</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>team</servlet-name>
    <servlet-class>ca.cafeteros.servlets.Team</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>team</servlet-name>
    <url-pattern>/team/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>ca.cafeteros.servlets.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>authentication</servlet-name>
    <jsp-file>/WEB-INF/view/pages/authentication.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>authentication</servlet-name>
    <url-pattern>/authentication</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>ca.cafeteros.servlets.Signup</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>validateMail</servlet-name>
    <servlet-class>ca.cafeteros.servlets.ValidateMail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>validateMail</servlet-name>
    <url-pattern>/validateMail</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>passwordRecovery</servlet-name>
    <servlet-class>ca.cafeteros.servlets.PasswordRecovery</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>passwordRecovery</servlet-name>
    <url-pattern>/passwordRecovery</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ajax</servlet-name>
    <servlet-class>ca.cafeteros.servlets.Ajax</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ajax</servlet-name>
    <url-pattern>/ajax/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>thankyouPage</servlet-name>
    <servlet-class>ca.cafeteros.servlets.ThankyouPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>thankyouPage</servlet-name>
    <url-pattern>/thankyou/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>ca.cafeteros.servlets.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <error-page>
    <location>/WEB-INF/view/pages/error404.jsp</location>
  </error-page>
  <security-role>
    <role-name>visitor</role-name>
  </security-role>
  <security-role>
    <role-name>executiveBoard</role-name>
  </security-role>
  <security-role>
    <role-name>manager</role-name>
  </security-role>
  <security-role>
    <role-name>root</role-name>
  </security-role>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/view/pages/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/view/pages/login-error.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>login</web-resource-name>
      <description>When login to the web application</description>
      <url-pattern>/authentication</url-pattern>
      <url-pattern>/login</url-pattern>
      <url-pattern>/user/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>visitor</web-resource-name>
      <description>Pages for visitor no matter if it is executive board or manager or etc</description>
      <url-pattern>/team/register/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>visitor</role-name>
      <role-name>root</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>executiveBoardMember</web-resource-name>
      <description>Pages for executive board members</description>
      <url-pattern>/manage/user/*</url-pattern>
      <url-pattern>/team/add</url-pattern>
      <url-pattern>/team/edit/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>executiveBoard</role-name>
      <role-name>root</role-name>
    </auth-constraint>
  </security-constraint>
  <listener>
    <listener-class>
  		ca.cafeteros.listeners.LoadUtilities
  	</listener-class>
  </listener>
  
  <filter>
    <filter-name>LogIn</filter-name>
    <filter-class>ca.cafeteros.filters.Login</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LogIn</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>logs-file</param-name>
    <param-value>/WEB-INF/logs/cafeteros.log</param-value>
  </context-param>
  <context-param>
    <param-name>persistence-unit-name</param-name>
    <param-value>cafeteros</param-value>
  </context-param>
</web-app>